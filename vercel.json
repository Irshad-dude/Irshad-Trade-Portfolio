{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/dist/**",
            "use": "@vercel/static"
        },
        {
            "src": "css/**",
            "use": "@vercel/static"
        },
        {
            "src": "js/**",
            "use": "@vercel/static"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "sitemap.xml",
            "use": "@vercel/static"
        },
        {
            "src": "robots.txt",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/sitemap.xml",
            "dest": "/sitemap.xml"
        },
        {
            "src": "/robots.txt",
            "dest": "/robots.txt"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/store/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/client/dist/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}